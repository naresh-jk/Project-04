pipeline {
    agent any
    tools{
        maven 'maven'
    }
    stages{
        stage('Build Maven'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/naresh-jk/Project-04']]])
                sh 'mvn clean install'
            }
        }
        stage('Build docker image'){
            steps{
                script{
                    sh 'docker build -t nareshkumarjk/cicd-with-docker .'
                }
            }
        }
        stage('Push image to Hub'){
            steps{
                script{
                    withCredentials([string(credentialsId: 'dockerhub-pwd', variable: 'dockerhubpwd')]) {
                    sh 'docker login -u nareshkumarjk02 -p ${dockerhubpwd}'
}      
                    sh 'docker tag nareshkumarjk/cicd-with-docker nareshkumarjk02/cicd-with-docker'
                    sh 'docker push nareshkumarjk02/cicd-with-docker'
                }
            }
        }
        stage('Deploy Application'){
            steps{
                script{
                    // Stop old container
                    sh 'docker stop cicd-app || true'
                    sh 'docker rm cicd-app || true'
                    
                    // Run new container
                    sh 'docker run -d -p 8085:8080 --name cicd-app nareshkumarjk02/cicd-with-docker'
                }
            }
        }
    }
}